        align-items: flex-start;
        justify-content: center;
        max-width: 80%;
        padding-top: 80px;
    }

    .title {
        font-weight: 900;
        font-size: 50px;
        margin: 0;
        margin-bottom: 10px;
    }

    .description {
        font-size: 24px;
        line-height: 30px;
        font-weight: 500;
        margin-bottom: 60px;
    }

    .titleAccentColor {
        color: var(--color-blue-500);
    }

    .button {
        box-sizing: border-box;
        text-decoration: none;
        font-size: 24px;
        border: none;
        padding: 20px 40px;
        cursor: pointer;
        color: #fff;
        background-color: var(--color-gray-700);
