---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<div class="header">
	<div title="Top Navigation" class="container headerContent">
		<div>
			<a class="title" href="/">
				<h1>
					React Chessboard UI
				</h1>
				<span class="packageVersion">
					v<span id="versionView"></span>
				</span>
			</a>
		</div>
		<div class="socials">
			<div class="socialIcon themeToggle">
				<ThemeToggle />
			</div>
			<a class="socialIcon socialIconGithub" href="https://github.com/skilldill/react-chessboard-ui" target="_blank">
				<svg fill="var(--color-theme-titles)" width="22px" height="22px" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
					<path d="M16 0.396c-8.839 0-16 7.167-16 16 0 7.073 4.584 13.068 10.937 15.183 0.803 0.151 1.093-0.344 1.093-0.772 0-0.38-0.009-1.385-0.015-2.719-4.453 0.964-5.391-2.151-5.391-2.151-0.729-1.844-1.781-2.339-1.781-2.339-1.448-0.989 0.115-0.968 0.115-0.968 1.604 0.109 2.448 1.645 2.448 1.645 1.427 2.448 3.744 1.74 4.661 1.328 0.14-1.031 0.557-1.74 1.011-2.135-3.552-0.401-7.287-1.776-7.287-7.907 0-1.751 0.62-3.177 1.645-4.297-0.177-0.401-0.719-2.031 0.141-4.235 0 0 1.339-0.427 4.4 1.641 1.281-0.355 2.641-0.532 4-0.541 1.36 0.009 2.719 0.187 4 0.541 3.043-2.068 4.381-1.641 4.381-1.641 0.859 2.204 0.317 3.833 0.161 4.235 1.015 1.12 1.635 2.547 1.635 4.297 0 6.145-3.74 7.5-7.296 7.891 0.556 0.479 1.077 1.464 1.077 2.959 0 2.14-0.020 3.864-0.020 4.385 0 0.416 0.28 0.916 1.104 0.755 6.4-2.093 10.979-8.093 10.979-15.156 0-8.833-7.161-16-16-16z"/>
				</svg>
			</a>
			<a class="socialIcon socialIconNpm" class="" href="https://www.npmjs.com/package/react-chessboard-ui" target="_blank">
				<img height="22px" width="22px" src="/npm.svg" alt="npm logo">
			</a>
		</div>
	</div>
</div>
<script>
	const versionView = document.querySelector<HTMLSpanElement>('#versionView');

	const fetchPackageAction = async (root: HTMLElement) => {
		try {
			const response = await fetch('https://registry.npmjs.org/react-chessboard-ui/latest');
			const { version } = await response.json();
			root.innerText = version;
		} catch(error) {
			console.error(error);
			root.innerText = '0.0.0';
		}
	};

	fetchPackageAction(versionView);
</script>
<style scoped>
	.header {
		position: sticky;
		top: 0;
		z-index: 100;
		backdrop-filter: blur(10px);
		background-color: var(--color-theme-header-background);
		border-bottom: 1px solid var(--color-theme-border) !important;
		height: 64px;
	}
	.headerContent {
		display: flex;
		justify-content: space-between;
		align-items: center;
		
		padding: 16px 0;
	}

	.title {
		text-decoration: none;
		display: flex;
		align-items: end;
	}

	.title h1 {
		margin: 0;
		color: var(--color-theme-titles);
		margin-right: 12px;
		font-size: 22px;
	}

	.socials {
		display: flex;
		gap: 14px;
	}

	.packageVersion {
		background-color: var(--color-blue-600);
		color: #fff;
		padding: 4px 8px;
		border-radius: 8px;
		font-weight: 700;
	}

	.socialIcon {
		padding: 4px;
		border-radius: 100%;
		transition: background-color .3s;
		display: flex;
		width: 28px;
		height: 28px;
		justify-content: center;
		align-items: center;
	}

	.socialIconGithub:hover {
		background-color: var(--color-theme-border);
	}

	.socialIconNpm:hover {
		background-color: var(--color-red-400);
	}

	.themeToggle:hover {
		background-color: var(--color-theme-border);
	}

	@media screen and (max-width: 500px) {
		.title h1 {
			font-size: 16px;
			margin-right: 4px;
		}

		.packageVersion {
			background-color: var(--color-blue-600);
			color: #fff;
			padding: 2px 6px;
			border-radius: 4px;
			font-size: 10px;
		}
	}
</style>
